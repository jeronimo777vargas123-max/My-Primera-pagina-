import turtle

t = turtle.Turtle()
t.shape("turtle")
t.pencolor("blue")
t.pensize(3)

# Pedir valores solo una vez
pasos_adelante = int(turtle.textinput("Movimiento", "Pasos hacia adelante:"))
pasos_abajo = int(turtle.textinput("Movimiento", "Pasos hacia abajo:"))
escalones = int(turtle.textinput("Movimiento", "¿Cuántos escalones quieres?"))

# Hacer la escalera
for i in range(escalones):
    # Avanzar horizontal
    t.forward(pasos_adelante)
    
    # Bajar
    t.right(90)
    t.forward(pasos_abajo)

    # Volver a mirar hacia la derecha (posición inicial del escalón)
    t.left(90)

turtle.done()

